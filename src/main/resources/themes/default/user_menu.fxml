<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="userMenuRoot" styleClass="user-menu-root"
      xmlns="http://javafx.com/javafx/8.0.40" fx:controller="com.faforever.client.main.UserMenuController">
  <children>
    <GridPane hgap="10.0">
      <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
      </rowConstraints>
      <children>
        <ImageView fx:id="userImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.rowSpan="2"/>
        <Label fx:id="usernameLabel" styleClass="h1" text="&lt;Username&gt;" GridPane.columnIndex="1"
               GridPane.columnSpan="2147483647"/>
        <Label fx:id="countryLabel" text="&lt;Country&gt;" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
               GridPane.rowIndex="1" GridPane.valignment="TOP">
          <graphic>
            <ImageView fx:id="countryImageView" pickOnBounds="true" preserveRatio="true"/>
          </graphic>
        </Label>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
    </GridPane>
    <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" spacing="10.0"
          VBox.vgrow="ALWAYS">
      <children>
        <Button fx:id="connectToGoogleButton" focusTraversable="false" graphicTextGap="12.0" mnemonicParsing="false"
                onAction="#onConnectToGoogleButtonClicked" text="%currentUser.connectGoogle">
          <graphic>
            <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@images/google+.png"/>
              </image>
            </ImageView>
          </graphic>
        </Button>
        <Button focusTraversable="false" graphicTextGap="12.0" maxHeight="1.7976931348623157E308"
                mnemonicParsing="false" onAction="#onLogOutButtonClicked" text="%currentUser.logOut">
          <graphic>
            <Label text="ï‚‹">
              <styleClass>
                <String fx:value="fontawesome"/>
                <String fx:value="logout-icon"/>
              </styleClass>
            </Label>
          </graphic>
        </Button>
      </children>
      <padding>
        <Insets top="20.0"/>
      </padding>
    </HBox>
  </children>
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
</VBox>

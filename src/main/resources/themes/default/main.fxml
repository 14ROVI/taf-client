<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainRoot" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="500.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.client.main.MainController">
  <children>
      <HBox fx:id="mainNavigation" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="main-navigation" VBox.vgrow="NEVER">
         <children>
            <MenuButton focusTraversable="false" mnemonicParsing="false" styleClass="main-menu-button">
              <items>
                  <MenuItem mnemonicParsing="false" text="%menu.support" />
                  <MenuItem mnemonicParsing="false" text="%menu.settings" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="%menu.feedback" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem mnemonicParsing="false" text="%menu.logOut" />
                <MenuItem mnemonicParsing="false" text="%menu.exit" />
              </items>
               <HBox.margin>
                  <Insets left="20.0" right="10.0" />
               </HBox.margin>
            </MenuButton>
            <ToggleButton fx:id="newsButton" focusTraversable="false" mnemonicParsing="false" onAction="#onNavigationButton" selected="true" text="%main.news">
               <toggleGroup>
                  <ToggleGroup fx:id="mainNavigationToggleGroup" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="chatButton" focusTraversable="false" mnemonicParsing="false" onAction="#onNavigationButton" text="%main.chat" toggleGroup="$mainNavigationToggleGroup" />
            <ToggleButton fx:id="gamesButton" focusTraversable="false" mnemonicParsing="false" onAction="#onNavigationButton" text="%main.games" toggleGroup="$mainNavigationToggleGroup" />
            <ToggleButton fx:id="vaultButton" focusTraversable="false" mnemonicParsing="false" onAction="#onNavigationButton" text="%main.vault" toggleGroup="$mainNavigationToggleGroup" />
            <ToggleButton fx:id="leaderboardButton" focusTraversable="false" mnemonicParsing="false" onAction="#onNavigationButton" text="%main.leaderboard" toggleGroup="$mainNavigationToggleGroup" />
            <Pane HBox.hgrow="ALWAYS" />
            <MenuButton fx:id="usernameButton" focusTraversable="false" mnemonicParsing="false" styleClass="username-button" text="Username">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </MenuButton>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="12.0" top="12.0" />
         </padding>
      </HBox>
      <AnchorPane fx:id="contentPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
      <HBox minHeight="20.0" styleClass="status-bar">
         <children>
            <Label fx:id="natStatusLabel" styleClass="status-bar-label" text="%statusbar.nat" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label styleClass="status-bar-label" text="&lt;Ladder Game Available&gt;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" styleClass="status-bar-label" text="%statusbar.connected" />
         </children>
         <VBox.margin>
            <Insets left="2.0" right="2.0" />
         </VBox.margin>
      </HBox>
  </children>
</VBox>

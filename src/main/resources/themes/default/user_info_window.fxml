<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="userInfoRoot" minHeight="256.0" minWidth="256.0" prefHeight="700.0"
          prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.40"
          fx:controller="com.faforever.client.chat.UserInfoWindowController">
  <columnConstraints>
    <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="50.0" vgrow="NEVER"/>
    <RowConstraints minHeight="50.0" vgrow="NEVER"/>
    <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
  </rowConstraints>
  <children>
    <Label fx:id="usernameLabel" text="&lt;Username&gt;" GridPane.columnIndex="1" GridPane.columnSpan="2147483647">
      <font>
        <Font size="32.0" />
      </font>
    </Label>
    <Label fx:id="countryLabel" text="&lt;Country&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP">
      <GridPane.margin>
        <Insets left="5.0" />
      </GridPane.margin>
      <graphic>
        <ImageView fx:id="countryImageView" pickOnBounds="true" preserveRatio="true" />
      </graphic>
    </Label>
    <TabPane tabClosingPolicy="UNAVAILABLE" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"
             GridPane.rowSpan="2147483647">
      <tabs>
        <Tab closable="false" text="%userInfo.ratingOverTime">
          <content>
            <VBox>
              <children>
                <HBox alignment="TOP_RIGHT" spacing="10.0">
                  <children>
                    <ToggleButton fx:id="ratingOver90DaysButton" mnemonicParsing="false" onAction="#onRatingOver90DaysButtonClicked" selected="true" text="%userInfo.ratingOverTime.last3Months">
                      <toggleGroup>
                        <ToggleGroup fx:id="timeRange" />
                      </toggleGroup>
                    </ToggleButton>
                    <ToggleButton fx:id="ratingOver365DaysButton" mnemonicParsing="false" onAction="#onRatingOver365DaysButtonClicked" text="%userInfo.ratingOverTime.lastYear" toggleGroup="$timeRange" />
                  </children>
                </HBox>
                <LineChart fx:id="rating90DaysChart" createSymbols="false" legendVisible="false" VBox.vgrow="ALWAYS">
                  <xAxis>
                    <NumberAxis fx:id="rating90DaysXAxis" autoRanging="true" forceZeroInRange="false" side="BOTTOM"/>
                  </xAxis>
                  <yAxis>
                    <NumberAxis fx:id="rating90DaysYAxis" autoRanging="true" forceZeroInRange="false" side="LEFT"/>
                  </yAxis>
                </LineChart>
              </children>
            </VBox>
          </content>
        </Tab>
        <Tab closable="false" text="%userInfo.achievements">
          <content>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
              <content>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                  <children>
                    <Label fx:id="loadingProgressLabel" alignment="CENTER" contentDisplay="TOP" graphicTextGap="10.0"
                           maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           text="%achievements.loading" VBox.vgrow="ALWAYS">
                      <graphic>
                        <ProgressIndicator fx:id="loadingProgressIndicator" prefHeight="50.0" prefWidth="50.0"/>
                      </graphic>
                    </Label>
                    <Label fx:id="notUsingClientLabel" maxHeight="1.7976931348623157E308" text="%userInfo.notUsingClient" wrapText="true" />
                    <GridPane fx:id="mostRecentAchievementPane" hgap="20.0" VBox.vgrow="NEVER">
                      <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                      </columnConstraints>
                      <rowConstraints>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                      </rowConstraints>
                      <children>
                        <ImageView fx:id="mostRecentAchievementImageView" fitHeight="128.0" fitWidth="128.0"
                                   pickOnBounds="true" preserveRatio="true" GridPane.rowSpan="3"/>
                        <Label text="%achievements.mostRecent" GridPane.columnIndex="1"/>
                        <Label fx:id="mostRecentAchievementNameLabel" styleClass="achievement-title" text="Label"
                               GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
                        <ProgressBar maxWidth="1.7976931348623157E308" progress="0.0" GridPane.columnSpan="2147483647"
                                     GridPane.rowIndex="4"/>
                        <Label fx:id="achievementsProgressLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                      </children>
                    </GridPane>
                    <Separator prefWidth="200.0"/>
                    <VBox fx:id="notConnectedContainer" alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                      <children>
                        <Label maxHeight="1.7976931348623157E308" text="%userInfo.googleConnectionRequired"
                               wrapText="true"/>
                        <Button fx:id="connectGoogleButton" focusTraversable="false" graphicTextGap="12.0"
                                mnemonicParsing="false" onAction="#onConnectToGoogleButtonClicked"
                                text="%userInfo.connectGoogle">
                          <graphic>
                            <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                <Image url="@images/google+.png" />
                              </image>
                            </ImageView>
                          </graphic>
                        </Button>
                      </children>
                    </VBox>
                    <VBox fx:id="achievedAchievementsContainer" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS"/>
                    <Separator prefWidth="200.0"/>
                    <VBox fx:id="availableAchievementsContainer" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
                      <VBox.margin>
                        <Insets/>
                      </VBox.margin>
                    </VBox>
                  </children>
                  <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                </VBox>
              </content>
            </ScrollPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
    <Button mnemonicParsing="false" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowSpan="2" GridPane.valignment="TOP">
      <graphic>
        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@images/add_friend.png" />
          </image>
        </ImageView>
      </graphic>
    </Button>
    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.rowSpan="2" />
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="32.0" />
  </padding>
</GridPane>

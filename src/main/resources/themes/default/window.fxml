        <Button fx:id="minimizeButton" onAction="#onMinimizeButtonClicked" styleClass="window-button" />
        <Button fx:id="maximizeButton" onAction="#onMaximizeButtonClicked" styleClass="window-button" />
        <Button fx:id="restoreButton" onAction="#onRestoreButtonClicked" styleClass="window-button" />
        <Button fx:id="closeButton" onAction="#onCloseButtonClicked" styleClass="window-button" />

      </children>
    </HBox>
  </children>
</AnchorPane>

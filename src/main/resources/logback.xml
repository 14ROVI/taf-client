<configuration>

  <logger name="org.pircbotx" level="info"/>
  <logger name="com.faforever.client.preferences" level="warn"/>
  <logger name="com.faforever.client.map" level="warn"/>
  <logger name="com.faforever.client.legacy" level="warn"/>
  <logger name="com.faforever.client.legacy.proxy" level="warn"/>
  <logger name="com.faforever.client.chat" level="debug"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>

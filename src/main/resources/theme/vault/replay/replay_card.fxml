<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="replayTileRoot" hgap="20.0" prefWidth="480"
          onMouseClicked="#onShowReplayDetail" styleClass="card, pointable, hoverable" vgap="10.0"
          xmlns="http://javafx.com/javafx/8.0.141" fx:controller="com.faforever.client.replay.ReplayCardController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="96.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="64.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="140.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <VBox GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.rowSpan="4" GridPane.columnSpan="1">
        <ImageView fx:id="mapThumbnailImageView" fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true"/>
        <Label fx:id="numberOfReviewsLabel" text="(33)">
            <graphic>
                <HBox styleClass="small-stars">
                    <fx:include fx:id="stars" source="../review/stars.fxml"/>
                </HBox>
            </graphic>
        </Label>
    </VBox>
    <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.fillHeight="true" GridPane.rowSpan="1" GridPane.columnSpan="2">
        <Label fx:id="gameTitleLabel" styleClass="h2" text="&lt;Title&gt;"/>
        <Label fx:id="onMapLabel" styleClass="secondary" text="%game.onMapFormat"/>
        <HBox fx:id="teamsContainer" spacing="10.0"/>
    </VBox>
    <Label fx:id="dateLabel" graphicTextGap="10.0" text="&lt;Date&gt;" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <graphic>
            <Region styleClass="icon, date-icon"/>
        </graphic>
    </Label>
    <Label fx:id="timeLabel" graphicTextGap="10.0" text="&lt;time&gt;" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <graphic>
            <Region styleClass="icon, time-icon"/>
        </graphic>
    </Label>
    <Label fx:id="durationLabel" graphicTextGap="10.0" text="&lt;Duration&gt;" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <graphic>
            <Region styleClass="icon, duration-icon"/>
        </graphic>
    </Label>
    <Label fx:id="ratingLabel" graphicTextGap="10.0" layoutX="134.0" layoutY="68.0" text="&lt;AvgRating&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <graphic>
            <Region styleClass="icon, statistics-icon"/>
        </graphic>
    </Label>
    <Label fx:id="qualityLabel" graphicTextGap="10.0" text="&lt;Quality&gt;" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <graphic>
            <Region styleClass="icon, balance-icon"/>
        </graphic>
    </Label>
    <Label fx:id="modLabel" graphicTextGap="10.0" text="&lt;Mod&gt;" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <graphic>
            <Region styleClass="icon, mods-icon"/>
        </graphic>
    </Label>
    <Label fx:id="ratingTypeLabel" graphicTextGap="10.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <graphic>
            <Region styleClass="icon, icon-trophy"/>
        </graphic>
    </Label>
    <HBox fx:id="replayAvailableContainer" spacing="10"
          GridPane.fillWidth="false"
          GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM"
          GridPane.rowIndex="3" GridPane.rowSpan="1"
          GridPane.columnIndex="2"
          GridPane.hgrow="ALWAYS" GridPane.vgrow="NEVER">
        <Button fx:id="tadaUploadButton" mnemonicParsing="false" onAction="#onTadaUploadButtonClicked" text="TADA">
            <tooltip><Tooltip text="%tada.upload.tooltip" /></tooltip>
            <graphic>
                <Region styleClass="icon,upload-icon"/>
            </graphic>
        </Button>
        <Button fx:id="watchButton" mnemonicParsing="false" onAction="#onWatchButtonClicked" >
            <graphic>
                <Region styleClass="icon,play-icon"/>
            </graphic>
        </Button>
    </HBox>
</GridPane>

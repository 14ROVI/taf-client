<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="enterPasswordRoot" styleClass="popup"
      xmlns="http://javafx.com/javafx/8.0.40" fx:controller="com.faforever.client.game.EnterPasswordController">
  <children>
    <PasswordField fx:id="passwordTextField" prefWidth="300.0" promptText="%game.join.passwordPrompt"
                   onAction="#onPasswordEntered"/>
  </children>
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
</VBox>
